{
  "name": "aiempires-launcher",
  "version": "1.0.0",
  "description": "AIEmpires Launcher - Mod management and LLM-powered faction AI for BattleTech",
  "main": "./dist/main/index.js",
  "author": {
    "name": "AIEmpires Team",
    "email": "aiempires@example.com"
  },
  "homepage": "https://github.com/Blackhorse311/AIEmpires",
  "repository": {
    "type": "git",
    "url": "https://github.com/Blackhorse311/AIEmpires.git"
  },
  "license": "MIT",
  "keywords": [
    "battletech",
    "modding",
    "ai",
    "llm",
    "faction-ai",
    "game-launcher"
  ],
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "start": "electron-vite preview",
    "prebuild": "electron-vite build",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-updater": "^6.1.0",
    "extract-zip": "^2.0.1"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "electron-vite": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.aiempires.launcher",
    "productName": "AIEmpires Launcher",
    "copyright": "Copyright (c) 2024 AIEmpires Team",
    "directories": {
      "output": "release/${version}",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "installerHeaderIcon": "resources/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AIEmpires Launcher"
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "resources/icon.icns",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "resources/icon.png",
      "category": "Game"
    },
    "publish": {
      "provider": "github",
      "owner": "Blackhorse311",
      "repo": "AIEmpires"
    }
  }
}
